<%- include('../partials/header', { user }) %>




<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Hello User!</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    </head>
    <body>
        <section class="section">
            <%= user.email %>!</h3>
            <h3 style="margin-left: 200px; margin-bottom: 10px;">Your Profile</h3>
        
        <figure class="image is-128x128">
            <img src="https://thisartworkdoesnotexist.com/" style="margin-left: 200px;"  >
        </figure>
        
        <h3 style="margin-left: 500px; margin-top: -100px;">Name: <%=user.name %></h3>
        <h3 style="margin-left: 500px;">Age:  <%=user.age %></h3>
        <h3 style="margin-left: 500px;">Location:<% user.location %> </h3>
        <h3 class="text-center mt-4">Hello, <%= user.email %> thanks for logging into the app</h3>

<form class="text-center mt-4" method="POST" action="/users/<%=user.id%>/?_method=PUT">
    <label for="email">Email:</label>
    <input type="email" name="email" id="email" required>

    <label for="password">New Password:</label>
    <input type="password" name="password" id="password" required>

    <button class="btn btn-primary" type="submit">Update Password</button>
</form>
      
        
  </section>
  </body>
</html>


